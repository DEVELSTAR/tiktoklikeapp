<div class="container mt-5">
  <h1><%= heading %></h1>

  <%= form_with model: @student, local: true, class: "form" do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :courses, class: "form-label" %>
      <%= f.collection_select :course_ids, Course.all, :id, :name, { selected: @student.course_ids }, { multiple: true, class: "form-select" } %>
    </div>
    <%= f.submit button_text, class: "btn btn-success" %>
  <% end %>
</div>
