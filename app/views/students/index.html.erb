<div class="container mt-5">
  <h1 class="text-center my-4">Students</h1>

  <%= link_to "Add New Student", new_student_path, class: "btn btn-primary mb-4" %>
  
  <div class="row">
    <% @students.each do |student| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to student.name, student_path(student) %></h5>
            <p class="card-text">Courses: <%= student.courses.pluck(:name).join(", ") %></p>
            <%= link_to 'Edit', edit_student_path(student), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Delete', student_path(student), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger btn-sm ml-2' %>

            <%= link_to 'Enroll in Course', edit_student_path(student), class: 'btn btn-success btn-sm mt-2' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
