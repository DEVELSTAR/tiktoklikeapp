<div class="col-md-3 mb-3">
  <%= link_to posts_path(filter: 'my_posts') do %>
    <div class="card text-center h-100 shadow-lg border-primary">
      <div class="card-body">
        <h5 class="card-title">My Posts</h5>
        <p class="card-text display-4 text-primary"><%= current_user.posts.count %></p>
      </div>
    </div>
  <% end %>
</div>

