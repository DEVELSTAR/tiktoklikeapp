<div class="col-md-3 mb-3">
  <%= link_to posts_path do %>
    <div class="card text-center h-100 shadow-lg border-primary">
      <div class="card-body">
        <h5 class="card-title">Total Posts</h5>
        <p class="card-text display-4 text-primary"><%= Post.count %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="col-md-3 mb-3">
  <%= link_to posts_path(filter: 'all_liked_posts') do %>
    <div class="card text-center h-100 shadow-lg border-success">
      <div class="card-body">
        <h5 class="card-title">Liked Posts</h5>
        <p class="card-text display-4 text-success"><%= @all_liked_posts.count %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="col-md-3 mb-3">
  <div class="card text-center h-100 shadow-lg border-success">
    <div class="card-body">
      <h5 class="card-title">Comments</h5>
      <p class="card-text display-4 text-success"><%= @comments_count %></p>
    </div>
  </div>
</div>

<div class="col-md-3 mb-3">
  <div class="card text-center h-100 shadow-lg border-success">
    <div class="card-body">
      <h5 class="card-title">Replies</h5>
      <p class="card-text display-4 text-success"><%= @reply_count %></p>
    </div>
  </div>
</div>

<div class="col-md-3 mb-3">
  <%= link_to users_path do %>
    <div class="card text-center h-100 shadow-lg border-success">
      <div class="card-body">
        <h5 class="card-title">Total Users</h5>
        <p class="card-text display-4 text-success"><%= User.count %></p>
      </div>
    </div>
  <% end %>
</div>
