<div class="container mt-5">
  <p class="text-muted">Home</p>
  <h1 class="text-primary mb-4">Of course! Anam is pagal.</h1>

  <!-- Navigation Buttons -->
  <div class="mb-4">
    <%= link_to "Contact Us", contact_us_welcomes_path, class: "btn btn-outline-primary me-2" %>
    <%= link_to "About Us", about_us_welcomes_path, class: "btn btn-outline-secondary me-2" %>
    <%= link_to "Create a Blog", new_post_path, class: "btn btn-outline-success" %>
  </div>

  <hr>

  <!-- Posts List -->
  <ul class="list-group">
    <% @posts.each do |post| %>
      <li class="list-group-item mb-3">
        <h5 class="mb-1">
          <%= link_to post.title, post, class: "text-decoration-none text-dark" %>
        </h5>
        <p class="text-muted"><%= post.content.truncate(100) %></p>
        <div>
          <%= link_to 'Delete', post, class: "btn btn-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
