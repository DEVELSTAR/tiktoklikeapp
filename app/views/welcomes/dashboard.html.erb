<div class="container mt-5">
  <div class="row mb-4">
    <div class="col-12">
      <h1 class="text-primary mb-4">
        Welcome, <%= current_user.admin? ? "Admin" : current_user.name %>!
      </h1>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-12">
      <%= link_to "Manage Posts", posts_path, class: "btn btn-secondary" %>

      <% if current_user.admin? %>
        <%= link_to "Manage Users", manage_users_users_path, class: "btn btn-warning ms-2" %>
      <% else %>
        <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-info ms-2" %>
      <% end %>
    </div>
  </div>

  <div class="row mb-4">
    <% if current_user.admin? %>
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Total Posts</h5>
            <p class="card-text display-4 text-primary"><%= Post.count %></p>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Total Users</h5>
            <p class="card-text display-4 text-success"><%= User.count %></p>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Likes Received</h5>
            <p class="card-text display-4 text-success"><%= Post.joins(:likes).count %></p>
          </div>
        </div>
      </div>
    <% else %>
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Your Posts</h5>
            <p class="card-text display-4 text-primary"><%= current_user.posts.count %></p>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Likes Received</h5>
            <p class="card-text display-4 text-success"><%= current_user.posts.joins(:likes).count %></p>
          </div>
        </div>
      </div>
    <% end %>

    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title">Active Sessions</h5>
          <p class="card-text display-4 text-info">5</p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <% if current_user.admin? %>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Posts Trend</h5>
            <canvas id="postsChart"></canvas>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Users Growth</h5>
            <canvas id="usersChart"></canvas>
          </div>
        </div>
      </div>
    <% else %>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Your Posts Over Time</h5>
            <canvas id="userPostsChart"></canvas>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Your Engagement</h5>
            <canvas id="engagementChart"></canvas>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
