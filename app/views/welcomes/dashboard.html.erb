<div class="container mt-5">
  <!-- Heading Section -->
  <div class="row mb-4">
    <div class="col-12">
      <p class="text-muted">Home</p>
      <h1 class="text-primary mb-4">Of course! Anam is pagal.</h1>
    </div>
  </div>

  <!-- Navigation Buttons -->
  <div class="row mb-4">
    <div class="col-12">
      <%= link_to "Contact Us", contact_us_welcomes_path, class: "btn btn-outline-primary me-2" %>
      <%= link_to "About Us", about_us_welcomes_path, class: "btn btn-outline-secondary me-2" %>
      <%= link_to "Create a Blog", new_post_path, class: "btn btn-outline-success" %>
