<h1 class="text-center my-4"><%= @doctor.name %></h1>
<div class="container">
  <h3>Specialization: <%= @doctor.specialization %></h3>

  <h4 class="mt-4">Appointments</h4>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Patient</th>
        <th>Appointment Date</th>
        <th>Notes</th>
      </tr>
    </thead>
    <tbody>
      <% @doctor.appointments.each do |appointment| %>
        <tr>
          <td><%= appointment.patient.name %></td>
          <td><%= appointment.appointment_date.strftime("%d %B %Y, %I:%M %p") %></td>
          <td><%= appointment.notes %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4">
    <%= link_to 'Back to Doctors', doctors_path, class: 'btn btn-secondary' %>
    <%= link_to 'Edit', edit_doctor_path(@doctor), class: 'btn btn-warning' %>
    <%= link_to 'Delete', doctor_path(@doctor), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger' %>
  </div>
</div>
