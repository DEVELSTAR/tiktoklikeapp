<h1 class="text-center my-4">Doctors</h1>

<div class="container">
  <%= link_to "Add New Doctor", new_doctor_path, class: "btn btn-primary mb-4" %>
  
  <div class="row">
    <% @doctors.each do |doctor| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to doctor.name, doctor_path(doctor) %></h5>
            <p class="card-text">Specialization: <%= doctor.specialization %></p>
            <%= link_to 'Edit', edit_doctor_path(doctor), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Delete', doctor_path(doctor), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm ml-2' %>

            <%= link_to 'Create Appointment', new_doctor_appointment_path(doctor), class: 'btn btn-success btn-sm mt-2' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
