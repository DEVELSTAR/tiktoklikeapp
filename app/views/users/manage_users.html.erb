<div class="container mt-5">
  <h2 class="text-center">Manage Users</h2>

  <div class="row mt-4">
    <div class="col-12">
      <%= link_to 'Create User', new_user_path, class: 'btn btn-success mb-3' %>
      <table class="table">
        <thead>
          <tr>
            <th>Email</th>
            <th>User Type</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.user_type.capitalize %></td>
              <td>
                <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm' %>
                <%= link_to 'Delete', user_path(user), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this user?' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
