<div class="container mt-5">
  <h1 class="text-primary mb-4 text-center"><%= @post.title %></h1>

  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <p class="mb-3"><%= @post.content %></p>

      <% if @post.images.attached? %>
        <div id="image-gallery" class="image-gallery d-flex flex-wrap justify-content-center">
          <% @post.images.each_with_index do |image, index| %>
            <div class="image-container" style="display: <% if index == 0 %>block<% else %>none<% end %>;">
              <%= image_tag image, class: "img-fluid mb-3", style: "max-height: 400px; object-fit: cover; width: auto;" %>
            </div>
          <% end %>
        </div>
        <% if @post.images.count > 1 %>
          <div class="d-flex justify-content-between mt-3">
            <button id="prev-image" class="btn btn-secondary" style="display: none;">Previous</button>
            <button id="next-image" class="btn btn-secondary">Next</button>
          </div>
        <% end %>
      <% else %>
        <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTNNLEL-qmmLeFR1nxJuepFOgPYfnwHR56vcw&s", class: "img-fluid mb-3", style: "max-height: 400px; object-fit: cover; width: auto;" %>
      <% end %>
    </div>
  </div>

  <div class="my-4">
    <h3 class="text-secondary">Comments</h3>
    
    <%= form_with(model: [@post, @comment], local: true) do |form| %>
      <div class="mb-3">
        <%= form.label :content, "Your Comment", class: "form-label" %>
        <%= form.text_area :content, class: "form-control", rows: 3, required: true %>
      </div>
      <div class="d-flex justify-content-end">
        <%= form.submit "Add Comment", class: "btn btn-primary" %>
      </div>
    <% end %>

    <ul class="list-group mt-3">
      <% @post.comments.each do |comment| %>
        <li class="list-group-item d-flex justify-content-between align-items-center" id="comment-<%= comment.id %>" data-comment-id="<%= comment.id %>" data-comment-content="<%= comment.content %>">
          <div class="comment-content" id="content-<%= comment.id %>">
            <strong><%= comment.user.name %>:</strong>
            <span><%= comment.content %></span>
          </div>

          <% if comment.user == current_user %>
            <div class="d-flex gap-2">
              <button class="btn btn-warning btn-sm" onclick="editComment(<%= comment.id %>)">Edit</button>
              <%= link_to 'Delete', post_comment_path(@post, comment), data: { turbo_method: :delete, confirm: "Are you sure you want to delete this comment?" }, class: 'btn btn-danger btn-sm' %>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<script>
  function editComment(commentId) {
    const commentItem = document.getElementById(`comment-${commentId}`);
    const contentDiv = document.getElementById(`content-${commentId}`);
    
    // Access the data attributes
    const commentContent = commentItem.getAttribute('data-comment-content');
    const commentUser = commentItem.getAttribute('data-comment-user');
    
    // Create the edit form with pre-filled content
    const editFormHTML = `
      <form action="/posts/<%= @post.id %>/comments/${commentId}" method="post">
        <input type="hidden" name="_method" value="patch">
        <textarea name="comment[content]" class="form-control" rows="3" required>${commentContent}</textarea>
        <div class="d-flex justify-content-end mt-2">
          <button type="submit" class="btn btn-primary">Update Comment</button>
          <button type="button" class="btn btn-secondary ms-2" onclick="cancelEdit(${commentId})">Cancel</button>
        </div>
      </form>
    `;

    contentDiv.innerHTML = editFormHTML;
  }

  function cancelEdit(commentId) {
    const contentDiv = document.getElementById(`content-${commentId}`);
    const commentItem = document.getElementById(`comment-${commentId}`);
    const commentContent = commentItem.getAttribute('data-comment-content');

    // Reset to the original content
    contentDiv.innerHTML = `
      <strong>${commentItem.getAttribute('data-comment-user')}:</strong>
      <span>${commentContent}</span>
    `;
  }
</script>
