<div class="container mt-5">
  <h1 class="text-center my-4">Courses</h1>

  <%= link_to "Add New Course", new_course_path, class: "btn btn-primary mb-4" %>
  
  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to course.name, course_path(course) %></h5>
            <p class="card-text">Students: <%= course.students.count %></p>
            <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Delete', course_path(course), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger btn-sm ml-2' %>

            <%= link_to 'Add Students', edit_course_path(course), class: 'btn btn-success btn-sm mt-2' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
